{
  "name": "pixy",
  "version": "0.1.0",
  "description": "The shaders and utilities for Three.js",
  "type": "module",
  "main": "./build/pixy.js",
  "module": "./build/pixy.module.js",
  "repository": "mebiusbox/pixy.js",
  "files": [
    "package.json",
    "LICENSE",
    "README.md",
    "build/pixy.js",
    "build/pixy.min.js",
    "build/pixy.modules.js",
    "src",
    "samples"
  ],
  "directories": {
    "doc": "docs",
    "example": "samples"
  },
  "browserslist": [
    "> 1%, not dead, not ie 11, not op_mini all"
  ],
  "scripts": {
    "build": "rollup -c",
    "build-shaderchunk": "python scripts/generateShaderChunk.py ./src/shaders/",
    "build-fxgen": "python scripts/generateShaderChunk.py ./src/fxgen/",
    "dev": "rollup -c -w",
    "lint": "eslint src",
    "lint:fix": "npm run lint -- --fix",
    "lint:file": "eslint",
    "copy:three": "node scripts/cp.js",
    "serve": "servez -p 8080"
  },
  "keywords": [
    "threejs",
    "webgl"
  ],
  "author": "mebiusbox",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mebiusbox/pixy.js/issues"
  },
  "homepage": "https://mebiusbox.github.io/",
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-terser": "^0.4.4",
    "eslint": "^8.37.0",
    "eslint-config-mdcs": "^5.0.0",
    "eslint-plugin-compat": "^4.2.0",
    "eslint-plugin-html": "^7.1.0",
    "eslint-plugin-import": "^2.29.0",
    "fs-extra": "^11.1.1",
    "rollup": "^3.20.2",
    "servez": "^2.0.0",
    "three": "^0.158.0"
  }
}
